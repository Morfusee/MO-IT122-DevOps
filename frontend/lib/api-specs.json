{
  "info": { "title": "My API", "version": "1.0.0" },
  "openapi": "3.0.0",
  "paths": {
    "/users": {
      "get": {
        "tags": ["Users"],
        "responses": {
          "200": {
            "description": "Sends a list of users",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/User" }
                }
              }
            }
          }
        },
        "parameters": [],
        "security": []
      },
      "post": {
        "tags": ["Users"],
        "responses": {},
        "parameters": [],
        "security": []
      }
    },
    "/register": {
      "post": {
        "tags": ["Auth"],
        "responses": {
          "200": {
            "description": "Registration successful",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Success" }
              }
            }
          },
          "409": {
            "description": "User already exists",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/AuthForm" }
            }
          }
        },
        "parameters": [],
        "security": []
      }
    },
    "/login": {
      "post": {
        "tags": ["Auth"],
        "responses": {
          "200": {
            "description": "Registration successful",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/AuthTokens" }
              }
            }
          },
          "401": {
            "description": "Invalid email or password",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/AuthForm" }
            }
          }
        },
        "parameters": [],
        "security": []
      }
    },
    "/logout": {
      "post": {
        "tags": ["Auth"],
        "responses": {
          "200": {
            "description": "Logout successful",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Success" }
              }
            }
          }
        },
        "parameters": [],
        "security": []
      }
    },
    "/me": {
      "get": {
        "tags": ["Auth"],
        "responses": {
          "200": {
            "description": "Sends a list of users",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/User" }
              }
            }
          }
        },
        "parameters": [],
        "security": []
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "email": { "type": "string" },
          "firstName": { "type": "string" },
          "lastName": { "type": "string" },
          "createdAt": { "type": "string" },
          "updatedAt": { "type": "string" }
        },
        "required": ["email", "firstName", "lastName", "createdAt", "updatedAt"]
      },
      "AuthForm": {
        "type": "object",
        "properties": {
          "email": { "type": "string" },
          "password": { "type": "string" }
        },
        "required": ["email", "password"]
      },
      "Success": {
        "type": "object",
        "properties": { "message": { "type": "string" } },
        "required": ["message"]
      },
      "Error": {
        "type": "object",
        "properties": {
          "status": { "type": "number" },
          "message": { "type": "string" },
          "error": { "type": "string" }
        },
        "required": ["status", "message", "error"]
      },
      "AuthTokens": {
        "type": "object",
        "properties": { "accessToken": { "type": "string" } },
        "required": ["accessToken"]
      }
    }
  }
}
